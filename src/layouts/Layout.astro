---
import header from '../components/header.astro';
import footer from '../components/footer.astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
      }
      main {
        flex: 1;
      }
    </style>
  </head>
  <body>
    <header />
    <main>
      <slot />
    </main>
    <footer />
  </body>
</html>