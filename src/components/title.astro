---
interface Props {
    page: string;
    Color: string; // Accepts a Tailwind-defined color name (e.g., "text-Love")
}

const { page, Color } = Astro.props;
const title = page ? `~/HITARTH THANKI/${page}` : "~/HITARTH THANKI";
---
<div class={`title-bar`}>
    <span class={`title-text font-[Outfit] text-[36px] font-semibold leading-[20px] ${Color}`}>{title}</span>
</div>
