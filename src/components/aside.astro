<style>
    .taskbar {
        display: flex;
        flex-direction: column;
        margin-top: 1rem;
    }

    .taskbar-link {
        text-decoration: none;
        color: var(--highlight-high);
        margin: 0.5rem 0;
        font-size: 1rem;
    }

    .taskbar-link:hover {
        text-decoration: underline;
    }
.pfp {
  width: 150px; /* Set the width of the image */
  height: 150px; /* Set the height of the image */
  object-fit: cover; /* Ensures the image fits nicely within the box */
  border-radius: 50%; /* Makes the image circular */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Adds a shadow for depth */
  border: 2px solid #fff; /* Adds a white border around the image */
}
</style>
