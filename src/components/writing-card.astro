---
const { content, page } = Astro.props;
---
<div class={`card ${page}`}>
    <article is:raw>{content}</article>
</div>

<style>
    .card {
        background-color: var(--background-color);
        padding: 1rem;
        border: 1px solid var(--card-hover);
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .card:hover {
        background-color: var(--card-hover);
    }

    /* Page-specific styles */
    .career {
        border-left: 4px solid var(--highlight-high);
    }

    .writing {
        border-left: 4px solid var(--pfp-border-color);
    }

    .projects {
        border-left: 4px solid var(--highlight-high);
    }
</style>
